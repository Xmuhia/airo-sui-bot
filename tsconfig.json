{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",        
    "moduleResolution": "NodeNext", 
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false, 
    "noEmit": false, 
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "noImplicitAny": false      
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}